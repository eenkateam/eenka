<div class="user_edit_content">
  <h2>ユーザー基本情報編集画面</h2>
  <ul class="receiver_error">
  <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <%= form_for(@user) do |f| %>
  <table>
<!--  -->
  <tr>
  	<td align="left">名前</td>
  	<td></td>
  	<td></td>
  </tr>
  <tr>
	<td align="left">苗字 <%= f.text_field :last_name %></td>
	<td align="left"></td>
	<td align="left">名前 <%= f.text_field :first_name %></td>
  </tr>
<!--  -->
  <tr>
  	<td align="left">名前（ふりがな）</td>
  	<td></td>
  	<td></td>
  </tr>
  <tr>
	<td align="left">セイ <%= f.text_field :last_kana %></td>
	<td align="left"></td>
	<td align="left">メイ <%= f.text_field :first_kana %></td>
  </tr>
<!--  -->
  <tr>
  	<td align="left">郵便番号（ハイフンなしで7桁）</td>
  	<td></td>
  	<td></td>
  </tr>
  <tr>
	<td align="left">〒 <%= f.text_field :postal_code %></td>
	<td align="left"></td>
	<td></td>
  </tr>
<!--  -->
  <tr>
  	<td align="left">住所（50文字以内）</td>
  	<td></td>
  	<td></td>
  </tr>
  <tr>
	<td align="left"><%= f.text_field :adress %></td>
	<td></td>
  	<td></td>
  </tr>
<!--  -->
  <tr>
  	<td align="left">電話番号（ハイフンなしで）</td>
  	<td></td>
  	<td></td>
  </tr>
  <tr>
	<td align="left"><%= f.text_field :phone_number %></td>
  	<td></td>
  	<td></td>
  </tr>
  </table>
    <button><%= f.submit 'ユーザー情報更新' %></button>
  <% end %>

  <button><%= link_to '退会する', destroy_user_session_path(flag: 1),method: :delete %></button>
</div>