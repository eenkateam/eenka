<h1>購入履歴のページです</h1>
<table>
	<tr><th>購入日　</th><th>商品名　</th><th>値段　</th><th>枚数　</th></tr>
	<% count = 0 %>
	<% @orders.each do |order| %>
		<tr><th><%= order.created_at.strftime('%Y/%m/%d') %></th></tr>
		<% order.order_products.each do |order_product| %>
			<tr>
				<th></th>
				<th><%= order_product.product.product_name %></th>
				<th><%= order_product.price %></th>
				<th><%= order_product.count %>枚</th>
			</tr>
		<% end %>
		<tr><th></th><th></th><th></th><th>合計金額は<%= @price[count] %>円です</th></tr>
		<th><%= link_to "購入履歴詳細へ", order_path(order) %></th>
		<% count += 1 %>
	<% end %>
</table>

