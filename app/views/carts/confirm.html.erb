<div class="confirm_body">
	<h2>購入希望商品一覧</h2> <%= link_to 'カートへ戻る',cart_path(current_user.cart)%>
	<table class="ui celled striped table order_table">
		<thead>
			<tr><th></th><th>商品名　</th><th>値段　</th><th>枚数　</th></tr>
		</thead>
		<% @cart_products.each do |cart_product| %>
			<tbody>
				<tr>
						<td class="order_image"><%= attachment_image_tag cart_product.product, :image, :fill, 100, 100, fallback: "noimage.png" %></td>
			  		<td><%= cart_product.product.product_name %></td>
			  		<td><%= cart_product.product.price %></td>
			  		<td><%= cart_product.count %>枚</td>
				</tr>
			</tbody>
		<% end %>
	</table>


	<h3 class="price">合計金額　<%= @price %>円</h3>

	<div class="card_box confirm_receiver">
		<div class="ui link cards" >
		  <div class="card">
				<h3>お届け先</h3>
				<p>名前　<%= @receiver.receiver_name %></p>
				<p>住所　<%= @receiver.receiver_adress %></p>
			</div>
		</div>
	</div>

	<%= link_to purchase_path(cart_id: @cart), method: :post do%>
	<div class="ui button buy_confirm">
		購入を確定する
	</div>
	<% end %>
</div>