<div class="adm_fogot_pw_box">
  <div class="adm_login_body">
    <section class="adm_login_content clearfix">
	<h2>パスワードを忘れましたか?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "送信" %><br>
	  </div>
	<% end %>

	<%= render "admins/shared/links" %>
	</section>
  </div>
</div>