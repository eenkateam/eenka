<body>
  <div class="adm_login_box">
    <div class="adm_login_body">
      <section class="adm_login_content clearfix">
        <h2>管理者ログイン画面</h2>
        <%= devise_error_messages! %>
        <%= alert %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

<!--           <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%> -->

          <div class="actions">
            <%= f.submit "ログイン", :class => "fluid positive ui button" %><br>
          </div>
        <% end %>
        <%= render "admins/shared/links" %>
      </section>
    </div>
  </div>
</body>